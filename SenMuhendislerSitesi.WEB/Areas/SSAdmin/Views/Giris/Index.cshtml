
@{
    Layout = null;//herhangi bir layout a bağlı değil
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Şen Mühendisler'e Giriş</title>

    <link href="/areas/ssadmin/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/areas/ssadmin/assets/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="/areas/ssadmin/assets/css/animate.css" rel="stylesheet">
    <link href="/areas/ssadmin/assets/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">SİTE</h1>
                <br />


            </div>
            <h3>Şen Mühendisler Admin Sayfasına Hoş Geldiniz.</h3>
            <p>
                @TempData["giris"]
            </p>
            <p>Kullanıcı Adınızı ve parolanızı giriniz.</p>
            <form class="m-t" role="form" action="/SSAdmin/Giris/Giris" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="KullaniciAdi" placeholder="Kullanıcı adı giriniz" required="">
                </div>
                <div class="form-group">
                    <input type="password" name="Sifre" class="form-control" placeholder="Şifre giriniz" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

            </form>
           
            <p class="m-t"> <small>Şen Mühendisler Sitesi Admin Sayfası &copy; 2018</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="/areas/ssadmin/assets/js/jquery-3.1.1.min.js"></script>
    <script src="/areas/ssadmin/assets/js/bootstrap.min.js"></script>

</body>

</html>
