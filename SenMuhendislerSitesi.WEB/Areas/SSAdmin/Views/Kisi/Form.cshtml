@using SenMuhendislerSitesi.Domain.ViewModels.AdminViewModels
@using SenMuhendislerSitesi.Domain.Globals
@model KisiViewModel

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="/ssadmin/Anasayfa">Anasayfa</a>
            </li>

            <li class="active">
                <strong>Kişi Ekle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5> <small></small></h5>
                    <div class="ibox-tools">




                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("Kaydet", "Kisi", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            @Html.LabelFor(x => x.Durum, new { @class = "col-sm-2 control-label" })

                            <div class="col-sm-10">
                                <div class="i-checks"><label> @Html.CheckBoxFor(x => x.Durum) <i></i></label></div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Ad, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Kişi adı giriniz..", required = "required" })
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Soyad, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", placeholder = "Kişi Soyadı giriniz..", required = "required" })
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Bina, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextAreaFor(x => x.Bina, new { @class = "form-control", required = "required" })
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.KisiTur, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EnumDropDownListFor(x => x.KisiTur, new { @class = "form-control", required = "required" })
                            </div>
                        </div>



                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary" type="submit">Kaydet</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
