@using SenMuhendislerSitesi.Domain.Globals
@{ 
    var acvm = ViewBag.AnasayfaCompositeViewModel;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <section class="heading-slider" data-interval="6000">
                @foreach (var item in acvm.Duyurular)
                {

                    <div class="heading-slider-single-slide">
                        <img src="@Globals.DuyuruResim/@item.FotografUrl" title="@item.Baslik" alt="@item.Baslik" />
                        <div class="heading-slider-single-slide-content">
                            <h1>@item.Baslik</h1>
                            <h3>@item.AltBaslik</h3>
                        </div>
                        <div class="promotion">
                            <span class="promotion-value">Yönetim</span>
                            <span class="promotion-description">@item.OlusturulmaTarihi</span>
                        </div>
                    </div>
                }

            </section>
        </div>
    </div>
</div>
