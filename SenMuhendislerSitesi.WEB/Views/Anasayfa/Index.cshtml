                                    <div class="label-element"><i class="fa fa-shopping-cart"></i>@acvm.Adresler.Avm</div>
                                </div>
                            </div>
                        </div>
                        <div class="clear">
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
